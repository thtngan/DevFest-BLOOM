                    <h1>CÁC DỰ ÁN ĐANG THỰC HIỆN</h1>
                </div>
                <div class="horizontal-scroll-wrapper squares" id="list">
                    <button type="button" class="btn btn-light" id="preBtn"><i class="fas fa-chevron-left"></i></button>
                    <% for(var i=0; i < projectList.length; i++) { %>
                        <div class="card">
                            <a href="<%= '/project/' + projectList[i].Name %>">
                                <img src="<%= projectList[i].Img[0] %>" class="card-img-top" alt="Project images">

                                <div class="overlay">
                                    <h3>
                                        <%= projectList[i].Name %>
                                    </h3>
                                    <small>
                                        <%= projectList[i].Fundraiser %>
                                    </small>
                                    <br><br>
                                    <button type="button" class="btn btn-outline-light">Đóng góp ngay</button>
                                </div>
                            </a>
                        </div>
                        <% } %>
                            <button type="button" class="btn btn-light" id="nextBtn"><i
                                    class="fas fa-chevron-right"></i></button>
                </div>
            </div>
            <div class="wrap-scroll-list">
                <div class="head">
                    <h1>NHÀ HẢO TÂM NỔI BẬT</h1>
                </div>
                <div class="horizontal-scroll-wrapper-1 distributeur" id="list_distributeur">
                    <button type="button" class="btn btn-light" id="preBtn_distributeur"><i
                            class="fas fa-chevron-left"></i></button>
                    <% for(var i=0; i < donorList.length; i++) { %>
                        <div class="card">
                            <a href="<%= '/user/' + donorList[i]._id %>">
                                <img src="<%= donorList[i].Img %>" class="card-img-top" alt="product images">
                                <div class="overlay">
                                    <div class="row">
                                        <div class="col">
                                            <%= donorList[i].FullName %>
                                        </div>
                                        <div class="col text-end">
                                            <button type="button" class="btn btn-outline-light ">Tìm hiểu</button>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <% } %>
                            <button type="button" class="btn btn-light" id="nextBtn_distributeur"><i
                                    class="fas fa-chevron-right"></i></button>
                </div>
